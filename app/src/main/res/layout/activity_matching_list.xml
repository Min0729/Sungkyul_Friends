<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matching_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topPanel"
        android:background="#577CB3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매칭 목록"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#577CB3"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/main_page_icon"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:background="@drawable/alarm_page_icon"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:background="@drawable/matching_list_icon"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:background="@drawable/mypage_icon"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="짝선배 짝후배"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소프트웨어 공학 (친구)"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컴퓨터 알고리즘 (팀원)"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트 마이닝 (팀원)"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>