<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other_person_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topPanel"
        android:background="#577CB3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="상대방 프로필"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/profile_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
        
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_account_circle_130"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="80dp"/>

    </FrameLayout>
    
    <GridLayout
        android:id="@+id/information_panel"
        android:layout_width="346dp"
        android:layout_height="255dp"
        app:layout_constraintTop_toBottomOf="@id/profile_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginTop="10dp"
        android:columnCount="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="주전공"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/right_botom_line"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="컴퓨터 공학과"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/bottom_line"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="복수 전공"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/right_botom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="산업경영공학과"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/bottom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="부전공"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/right_botom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="      "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/bottom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4학년"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/right_botom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="여자"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/bottom_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="관심사: 코딩, 게임, 개발, 프론트엔드, 노래,
            악기, 영화, 음악감상, 뷰티, 쇼핑"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="4"
            android:layout_columnSpan="2"/>

    </GridLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        app:layout_constraintTop_toBottomOf="@id/information_panel"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받은 멘트"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:text="성격 너무 착하시고 좋으세요"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="#FEE6E2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:text="꿀팁들을 잘 알려주세요"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="#FEE6E2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:text="친절하게 잘 대해주세요"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="#FEE6E2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/more_review_button"
            android:layout_width="84dp"
            android:layout_height="33dp"
            android:background="@drawable/round_shape"
            android:text="더보기"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
           android:layout_gravity="right"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    




</androidx.constraintlayout.widget.ConstraintLayout>