<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choice_interest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topPanel"
        android:background="#577CB3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="관심사 선택"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/interest_choice_panel"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보다 원활한 매칭을 위해 관심사를 선택해주세요"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/round_shape"
        android:backgroundTint="#A7CEDF"
        android:padding="7dp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/humanities"
        app:layout_constraintTop_toBottomOf="@id/interest_choice_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인문"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#BDE6E2"
        android:background="@drawable/round_shape"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/humanities_panel"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/interest_choice_panel"
        app:layout_constraintLeft_toRightOf="@id/humanities"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#독서"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#외국어"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#토론"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/science"
        app:layout_constraintTop_toBottomOf="@id/humanities"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과학"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#BDE6E2"
        android:background="@drawable/round_shape"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/science_panel"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/humanities_panel"
        app:layout_constraintLeft_toRightOf="@id/science"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#실험"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#연구"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#보건"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/it"
        app:layout_constraintTop_toBottomOf="@id/science_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#BDE6E2"
        android:background="@drawable/round_shape"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <GridLayout
        android:id="@+id/it_panel"
        android:layout_width="330dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/science_panel"
        app:layout_constraintLeft_toRightOf="@id/it"
        android:columnCount="3"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#코딩"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#AI"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#게임"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#개발"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#프론트엔드"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#백엔드"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

    </GridLayout>

    <TextView
        android:id="@+id/entertainment"
        app:layout_constraintTop_toBottomOf="@id/it_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예체능"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#BDE6E2"
        android:background="@drawable/round_shape"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <GridLayout
        android:id="@+id/entertainment_panel"
        android:layout_width="330dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/it_panel"
        app:layout_constraintLeft_toRightOf="@id/entertainment"
        android:columnCount="3"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#그림"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#노래"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#악기"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#운동"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#연극"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#영화"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#연출"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#레크레이션"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#음악감상"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#뷰티"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>
    </GridLayout>

    <TextView
        android:id="@+id/etc"
        app:layout_constraintTop_toBottomOf="@id/entertainment_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:backgroundTint="#BDE6E2"
        android:background="@drawable/round_shape"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/etc_panel"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/entertainment_panel"
        app:layout_constraintLeft_toRightOf="@id/etc"
        android:background="@drawable/round_shape"
        android:backgroundTint="#F5F7EF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#캠핑"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#쇼핑"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#연예인"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retouch_interest_button"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:background="@drawable/round_shape"
        android:text="수정"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/etc_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>